<?xml version="1.0" encoding="utf-8"?>
<ui>
    <layout>
        <!-- Demo shows Hidden, Collapse, Shown -->
        <vbox id="root" align="center">
            <!-- boxes -->
            <vbox vertical-align="bottom" spread="true" height="200" margin="20, 30, 20, 30">
                <hbox id="prompt" spread="true" font-size="16" margin="5, 5, 5, 5"></hbox>
                <hbox id="error" spread="true" font-size="14" font-color="#FF0000" margin="5, 5, 5, 5"></hbox>
                <hbox id="text" spread="true" height="42" text="The vertical-align value is bottom." font-size="16" bold="true" margin="5, 5, 5, 5"></hbox>
            </vbox>
            
            <!-- Trigger for demo -->
            <hbox spread="true" margin="20, 30, 20, 30">
                <vbox type="button" button.content="Hidden" button.click="onButton:"
                    id="hidden" height="50" width="80" margin="5, 10, 5, 0"/>
                <vbox type="button" button.content="Collapsed" button.click="onButton:"
                    id="collapsed" height="50" width="80" margin="5, 10, 5, 0"/>
                <vbox type="button" button.content="Shown" button.click="onButton:"
                    id="shown" height="50" width="80" margin="5, 10, 5, 0"/>

            </vbox>
        </vbox>
    </layout>
</ui>